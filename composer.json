{
    "name": "solid-framework/http",
    "description": "A module for the Solid Framework allowing handling of HTTP requests.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "solid",
        "php",
        "modular",
        "module",
        "core",
        "http"
    ],
    "authors": [
        {
            "name": "Martin Pettersson",
            "email": "martin@solid-framework.com",
            "role": "Developer"
        }
    ],
    "homepage": "http://solid-framework.com",
    "support": {
        "email": "support@solid-framework.com",
        "issues": "https://github.com/solid-framework/http/issues",
        "source": "https://github.com/solid-framework/http",
        "docs": "http://docs.solid-framework.com"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Solid\\Http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Solid\\App\\Controllers\\": "src/Tests/Fixtures/Controllers"
        }
    },
    "require": {
        "php": ">=7.0",
        "solid-framework/core": "~0.3.0",
        "psr/http-message": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5.0",
        "codeclimate/php-test-reporter": "~0.3.2"
    },
    "scripts": {
        "test": "phpunit"
    }
}
