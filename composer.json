{
    "name": "solid-framework/http",
    "description": "A module for the Solid Framework adding an implementation of the PSR-7 HTTP message interfaces.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "solid",
        "framework",
        "http",
        "psr-7",
        "php",
        "modular",
        "module"
    ],
    "authors": [
        {
            "name": "Martin Pettersson",
            "email": "martin@solid-framework.com",
            "role": "Developer"
        }
    ],
    "homepage": "http://solid-framework.com",
    "support": {
        "email": "support@solid-framework.com",
        "issues": "https://github.com/solid-framework/http/issues",
        "source": "https://github.com/solid-framework/http",
        "docs": "http://docs.solid-framework.com"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src --standard=PSR2"
    },
    "autoload": {
        "psr-4": {
            "Solid\\Http\\": "src"
        }
    },
    "prefer-stable": true,
    "provide": {
        "psr/http-message-implementation": "~1.0.0"
    },
    "require": {
        "php": ">=7.1",
        "psr/http-message": "~1.0.0",
        "solid-framework/collection": "~0.2.0",
        "http-interop/http-factory": "1.0.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
